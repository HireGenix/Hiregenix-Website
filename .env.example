# Database - PostgreSQL
DATABASE_URL="postgresql://admin:password@localhost:5432/hiregenix?schema=public"
POSTGRES_USER="admin"
POSTGRES_PASSWORD="password"

# pgAdmin (optional)
PGADMIN_EMAIL="admin@hiregenix.com"
PGADMIN_PASSWORD="password"

# Authentication
# For local development
NEXTAUTH_URL="http://localhost:3000"
# For Cloudflare Pages deployment
# NEXTAUTH_URL="https://your-project-name.pages.dev"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Media Storage (optional)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Email (optional)
# For NextAuth email provider
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=""
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM=""

# SMTP Settings for form submissions
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-password"
EMAIL_FROM="HireGenix <noreply@myhiregenix.com>"

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS=""

# Platform Integration
PLATFORM_API_URL="http://localhost:3001/api"
PLATFORM_API_KEY="your-platform-api-key"
USE_PLATFORM_API="true"

# Redis Configuration
# Option 1: Use Redis URL (preferred for production)
REDIS_URL="redis://username:password@host:port"
# Option 2: Use individual connection parameters
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

